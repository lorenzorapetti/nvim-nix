root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.lua]
indent_style = space
indent_size = 2
max_line_length = 160
trim_trailing_whitespace = true

[*.nix]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
max_line_length = off
